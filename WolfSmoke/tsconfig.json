{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "types": ["@types/node", "node"],
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
