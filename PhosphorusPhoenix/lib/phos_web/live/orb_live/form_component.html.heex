<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="orb-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>
  
    <%= label f, :active %>
    <%= checkbox f, :active %>
    <%= error_tag f, :active %>
  
    <%= label f, :media %>
    <%= checkbox f, :media %>
    <%= error_tag f, :media %>
  
    <%= label f, :extinguish %>
    <%= datetime_select f, :extinguish %>
    <%= error_tag f, :extinguish %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
