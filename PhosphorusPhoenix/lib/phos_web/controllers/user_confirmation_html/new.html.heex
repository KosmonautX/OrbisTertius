<h1>Resend confirmation instructions</h1>

<.simple_form :let={f} for={:user} action={~p"/users/confirm"}>
  <.input field={{f, :email}} type="email" label="Email" required={true} />

  <:actions>
    <.button type="submit">Resend confirmation instructions</.button>
  </:actions>
</.simple_form>

<p>
  <.link patch={~p"/users/register"}>Register</.link>
  <span> | </span>
  <.link patch={~p"/users/log_in"}>Log in</.link>
</p>
